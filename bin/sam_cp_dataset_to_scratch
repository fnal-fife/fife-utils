#!/usr/bin/env python

import ifdh
import os.path
from sam_clone_dataset import clone, fourdeep
from fife_sam_utils import dataset
import optparse
import grp
import sys
import os

def check_dest(dest):
    destp = os.path.dirname(dest)

    h = ifdh.ifdh()
    for d in [ destp , dest]:
	res = h.ls(d, 1, "")
	if len(res) == 0:
            try:
	        h.mkdir(d,"")
            except:
                pass
	res = h.ls(d, 1, "")
	if len(res) == 0:
	    sys.stderr.write("\nERROR: Cannot find or create %s:\n-- please contect servicedesk to request it be made" % d)
            exit(1)

if __name__ == '__main__':

    parser = optparse.OptionParser(usage="usage: %prog [options] \n copy files in named dataset to archive and undeclare other copies.\n  (Use %prog --help for full options list)")
    parser.add_option('-v','--verbose',   action='count')
    parser.add_option('-j','--just_say',  action='store_true', help="do not actually copy, just say what you would do")
    parser.add_option('-e','--experiment')
    parser.add_option('-b','--batch_size',default = 20, type='int', help="copy then declare in batches of this size")
    parser.set_defaults(dirfunc = fourdeep)
    parser.add_option('-n', '--name',     help="dataset name to copy", )

    (o,a) = parser.parse_args()

    if not o.experiment:
        o.experiment = os.environ.get('EXPERIMENT',os.environ.get('SAM_EXPERIMENT',grp.getgrgid(os.getgid())[0]))

    if o.experiment:

        os.environ['EXPERIMENT']= o.experiment
        os.environ['SAM_EXPERIMENT']= o.experiment
        os.environ['IFDH_BASE_URI'] = "http://samweb.fnal.gov:8480/sam/%s/api" % o.experiment

    if not o.name:
        parser.error("expected --name dataset-name")
        exit(1)

    dest = "/pnfs/%s/scratch/sam_managed_users/%s" % ( 
	o.experiment, os.environ.get('USER',os.environ.get('GRID_USER')))

    check_dest(dest)

        
    clone(dataset(o.name), dest, subdirf = o.dirfunc, just_say = o.just_say, batch_size = o.batch_size, verbose = o.verbose, experiment=o.experiment)
